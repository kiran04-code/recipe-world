<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Your Recipe</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <div class="container mt-5">
    <h2 class="text-center mb-4">Add a New Recipe</h2>

    <form action="/adrecpesbyuser" method="post" enctype="multipart/form-data">
      <!-- Recipe Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Recipe Title</label>
        <input type="text" name="title" class="form-control" id="title" required>
      </div>

      <!-- Recipe Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Recipe Image</label>
        <input type="file" name="image" class="form-control" id="image" accept="image/*" required>
      </div>

      <!-- Ingredients -->
      <div class="mb-3">
        <label for="ingredients" class="form-label">Ingredients</label>
        <textarea name="ingredients" class="form-control" id="ingredients" rows="4" placeholder="List ingredients..." required></textarea>
      </div>

      <!-- Steps -->
      <div class="mb-3">
        <label for="steps" class="form-label">Preparation Steps</label>
        <textarea name="steps" class="form-control" id="steps" rows="5" placeholder="Describe the cooking steps..." required></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary">Post Recipe</button>
     
    </form>
 
  </div>
  <% if (locals.error) { %>
    <div id="successMessage" class="max-w-sm mx-auto p-3 bg-green-600 rounded-lg shadow-md mb-4 text-white text-sm text-center mt-5" style="background-color: rgb(51, 226, 63);">
      <%- locals.error %>
    </div>
  <% } %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
