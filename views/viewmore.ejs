<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe Details - <%= data.title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f0f4f8;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }

    .recipe-card {
      background-color: #ffffff;
      border-radius: 12px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.08);
      padding: 40px;
    }

    .recipe-title {
      color: #007bff;
      font-weight: bold;
      font-size: 2.5rem;
    }

    .recipe-img {
      width: 100%;
      max-height: 500px;
      object-fit: cover;
      border-radius: 12px;
      margin-bottom: 30px;
    }

    .lead {
      font-size: 1.25rem;
      color: #555;
    }

    .steps, .comment-section {
      background-color: #eaf4ff;
      padding: 25px;
      border-radius: 10px;
      margin-top: 30px;
    }

    .step {
      background-color: #d2ebff;
      margin-bottom: 15px;
      padding: 15px;
      border-radius: 6px;
      font-weight: 500;
    }

    .ingredients-list {
      background-color: #f8fbff;
      border-left: 5px solid #007bff;
      padding: 20px;
      border-radius: 8px;
      margin-top: 30px;
    }

    .btn-custom {
      background-color: #007bff;
      color: white;
      transition: background-color 0.3s ease;
      padding: 10px 20px;
      font-size: 1rem;
    }

    .btn-custom:hover {
      background-color: #0056b3;
    }

    .modal-content {
      border-radius: 10px;
    }

    @media (max-width: 768px) {
      .recipe-title {
        font-size: 1.75rem;
      }
    }
  </style>
</head>
<body>

  <div class="container-fluid py-5 px-4">
    <div class="recipe-card">
      <!-- Recipe Title -->
      <h2 class="text-center recipe-title mb-4"><%= data.title %></h2>

      <!-- Recipe Image -->
      <img src="data:image/jpeg;base64,<%= data.image.toString('base64') %>" class="recipe-img" alt="Recipe Image">

      <!-- Description -->
      <p class="lead text-center mt-3"><%= data.description || 'No description available.' %></p>

      <!-- Steps -->
      <div class="steps">
        <h4 class="mb-3 text-primary">ğŸ“ Steps to Make the Recipe</h4>
        <div class="step">
          <%- data.steps %>
        </div>
      </div>

      <!-- Ingredients -->
      <div class="ingredients-list mt-4">
        <h5 class="mb-2 text-primary">ğŸ›’ Ingredients</h5>
        <ul class="mb-0">
          <%- data.ingredients %>
        </ul>
      </div>

     <% if (locals.users) { %>
       <!-- Like, Comment, Show/Hide Comments, Save Recipe -->
       <div class="d-flex justify-content-between mt-4 flex-wrap gap-2">
        <form action="/viewmore/like/<%= data._id %>" method="post" class="d-inline">
          <button type="submit" class="btn btn-custom">
            ğŸ‘ Like (<%= data.likes|| 0 %>)
          </button>
        </form>
        <button class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#commentModal">ğŸ’¬ Comment</button>
        <button class="btn btn-secondary" id="toggleCommentsBtn" onclick="toggleComments()">ğŸ‘ï¸ Show Comments</button>
       <a href="/viewmore/save/<%- data._id %>"><button class="btn btn-success">ğŸ’¾ Save Recipe</button></a>
      </div>

      <!-- Comment Modal -->
      <div class="modal fade" id="commentModal" tabindex="-1" aria-labelledby="commentModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="commentModalLabel">Add a Comment</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/viewmore/coments/<%= data._id %>" method="POST">
              <div class="modal-body">
                <textarea class="form-control" rows="4" placeholder="Write your comment here..." name="coments"></textarea>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Submit Comment</button>
              </div>
            </form>
          </div>
        </div>
      </div>

     <% } %>
      <!-- Comments Section (Initially Hidden) -->
      <div class="comment-section mt-4" id="commentsSection" style="display: none;">
        <h4 class="mb-3 text-primary">ğŸ’¬ Comments</h4>
        <!-- Dynamic Comments -->
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(comment => { %>
            <div class="mb-3 p-3 bg-white text-dark rounded shadow-sm">
              <strong><%= comment.createBy?.email || "Anonymous" %>:</strong>
              <p><%= comment.coments %></p>
              <small class="text-muted"><%= new Date(comment.createdAt).toLocaleString() %></small>
            </div>
          <% }) %>
        <% } %>
      </div>

    </div>
  </div>

  <script>
    function toggleComments() {
      const section = document.getElementById('commentsSection');
      const button = document.getElementById('toggleCommentsBtn');
      const isVisible = section.style.display === 'block';

      section.style.display = isVisible ? 'none' : 'block';
      button.textContent = isVisible ? 'ğŸ‘ï¸ Show Comments' : 'ğŸ™ˆ Hide Comments';
    }
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
