<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Recipe Details (Admin)</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white min-h-screen flex flex-col">

  <!-- Header -->
  <header class="bg-gray-800 p-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold">ğŸ½ï¸ Admin View: Recipe Details</h1>
    <a href="/admin" class="bg-indigo-600 px-4 py-2 rounded hover:bg-indigo-500 transition">â¬… Dashboard</a>
  </header>

  <!-- Main Content -->
  <main class="p-6 flex flex-col gap-6 max-w-4xl mx-auto">
    <!-- Likes Section -->
    <div class="bg-gray-800 rounded-xl p-6">
      <h3 class="text-2xl font-semibold text-indigo-400 mb-4">â¤ï¸ Liked By</h3>
      <p class="text-gray-300 mb-2">
  Total Likes: <span class="text-green-400 font-bold"><%= data.likedBy.length %></span>
</p>

      <ul class="list-disc list-inside text-gray-400">
        <div class="mt-2 text-sm text-gray-400">
            <p class="mb-1">Liked by:</p>
            <ul class="list-disc list-inside">
              <% data.likedBy.forEach(user => { %>
                <li><%= user.email %></li>
              <% }) %>
            </ul>
          </div>
      </ul>
    </div>

    <!-- Comments Section -->
    <div class="bg-gray-800 rounded-xl p-6">
      <h3 class="text-2xl font-semibold text-indigo-400 mb-4">ğŸ’¬ Comments</h3>
      
      <div class="space-y-4">
        <div class="border-b border-gray-700 pb-3">
            <h2 style="color: rgb(87, 87, 239);"><%- data.title %></h2>
            <% comments.forEach(comment => { %>
              <p class="text-gray-300">
                <strong><%= comment.createBy?.email || "Anonymous" %>:</strong>
                <%- comment.coments %>
              </p>
              <p class="text-xs text-gray-500">
                Posted on: <%= new Date(comment.createdAt).toLocaleString() %>
              </p>
            <% }) %>            
            
        </div>
      </div>
    </div>

  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-center py-4 mt-auto">
    <p class="text-sm text-gray-400">ğŸ½ï¸ â€œRecipes are memories you can taste.â€</p>
    <p class="text-xs text-gray-500 mt-1">&copy; 2025 UniqueAdmin. All rights reserved.</p>
  </footer>

</body>
</html>
